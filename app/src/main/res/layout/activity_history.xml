<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryController"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/regularPad"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryOff"
        android:text="@string/history"
        android:textSize="@dimen/largeText"
        android:textStyle="bold"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal"
        android:padding="@dimen/regularPad">

        <TextView
            android:id="@+id/selectedDate"
            android:layout_width="225dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:hint="Select date"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/chooseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Go"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/historyListView"
        android:layout_width="match_parent"
        android:layout_height="254dp"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="75dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Fat"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryOff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="79dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Protein"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryOff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="Calories"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorPrimaryOff"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fat"
            android:layout_width="11dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/protein"
            android:layout_width="22dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calorie"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="bottom">

        <ImageButton
            android:id="@+id/overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@color/colorPrimaryOff"
            android:padding="20dp"
            android:src="@drawable/ico_overview" />

        <ImageButton
            android:id="@+id/getStarted"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@color/colorPrimaryOff"
            android:padding="@dimen/regularPad"
            android:src="@drawable/ico_record" />

        <ImageButton
            android:id="@+id/history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@color/colorPrimary"
            android:padding="@dimen/regularPad"
            android:src="@drawable/ico_history_wh" />

    </LinearLayout>

</LinearLayout>