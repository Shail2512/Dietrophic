<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculateEatCalories"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/regularPad"
        android:text="Record"
        android:textColor="@color/colorPrimaryOff"
        android:textSize="@dimen/largeText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="321dp"
        android:orientation="vertical"
        android:padding="@dimen/wrapPad">

        <TextView
            android:id="@+id/clickedItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item"
            android:textSize="@dimen/largeText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ã— "
                android:textSize="20sp" />

            <EditText
                android:id="@+id/gram"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="grams"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="157dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="= "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/totalfat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fat(g)"
                android:textSize="@dimen/largeText" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="84dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="192dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="= "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/totalprotein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="protein(g)"
                android:textSize="@dimen/largeText" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="272dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="= "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/totalcalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="calories(kcal)"
                android:textSize="@dimen/largeText" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/calcbtn"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:onClick="calculateTotal"
            android:text="@string/_1_calculate"
            android:textColor="@color/colorPrimaryOff" />


        <Button
            android:layout_marginTop="@dimen/regularPad"
            android:id="@+id/historybtn"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:onClick="calculateTotal"
            android:text="@string/_2_history"
            android:textColor="@color/colorPrimaryOff" />

    </LinearLayout>

</LinearLayout>